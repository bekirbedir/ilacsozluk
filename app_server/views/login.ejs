<div class="container">
    <div class="row">
        <div class="loginPanel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Giriş Paneli</div>
                </div>

                <div class="panel-body">
                    <form action="/login" method="POST">
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="username" placeholder="Kullanıcı Adı">
                        </div>
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-password" type="password" class="form-control" name="password" placeholder="Parola">
                        </div>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Giriş">
                            <a href="/login/signup" class="btn btn-info" > Kayıt Ol </a>

                        </div>
                    </form>
                </div>

                <div class="panel-footer clearfix">

                </div>


            </div>
        </div>
    </div>
</div>
<%if(typeof username!='undefined')
 {%>
    <h2>Hoşgeldin,
        <%=username%>
    </h2>

    <h3>Parolaniz:
        <%=password%>
    </h3>
    <%}%>