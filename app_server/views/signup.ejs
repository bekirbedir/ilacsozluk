<div class="container">
    <div class="row">
        <div class="loginPanel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Kayıt Ol</div>
                </div>

                <div class="panel-body">
                    <form action="/login/signup" method="POST">
                        <!--ad-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="signup-ad" type="text" class="form-control" name="ad" placeholder="Adınız">
                        </div>
                        <!--soyad-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="signup-soyad" type="text" class="form-control" name="soyad" placeholder="Soyadınız">
                        </div>
                        <!--email-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="signup-email" type="text" class="form-control" name="email" placeholder="Mail Adresi Girin">
                        </div>
                        <!--kullaniciad-->

                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="signup-username" type="text" class="form-control" name="kullaniciAdi" placeholder="kullaniciAdi">
                        </div>
                        <!--sifre-->
                        <div style="margin-bottom:25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="signup-password" type="text" class="form-control" name="sifre" placeholder="Şifre Giriniz">
                        </div>
                        <div class="pull-right">
                            <a href="/login" class="btn btn-success">
                                <p style="display:inline"> Üyeliğim Var</p>
                            </a>
                            <input type="submit" class="btn btn-info" value="Kayıt Ol">

                        </div>
                    </form>
                </div>

                <div class="panel-footer clearfix">

                </div>


            </div>
        </div>
    </div>
</div>
<%if(typeof username!='undefined')
 {%>
    <h2>Hoşgeldin,
        <%=username%>
    </h2>

    <h3>Parolaniz:
        <%=password%>
    </h3>
    <%}%>